var assert = require('assert');
if (!global.is_checking) {
    console.log('Example:')
    console.log(chase(6, 3, 2))

    // These "asserts" using only for self-checking and not necessary for auto-testing
    function almost_equal(checked, correct, significantDigits) {
        precision = 0.1 ** significantDigits;
        return correct - precision < checked < correct + precision;
	}

    assert.equal(almost_equal(chase(6, 3, 2), 4, 8), True));
    assert.equal(almost_equal(chase(10, 1, 10), 11.111111111, 8), True);
